<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Hello World, MyActivity"
            />
    <Button
        android:text="Book Sync Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_book_sync" />
    <Button
        android:text="Book Home Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/book_home_button" />

    <Button
        android:text="Word Sync Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_word_sync" />
    <Button
        android:text="Word List Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_word_list" />
    <Button
        android:text="Paragraph List Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_paragraph_list" />
    <Button
        android:text="Phrase List Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_phrase_list" />
    <Button
        android:text="Sync List Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_sync_list" />
</LinearLayout>

