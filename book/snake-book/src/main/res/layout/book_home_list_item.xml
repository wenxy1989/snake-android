<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:id="@+id/book_home_list_swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FF5534"
        android:gravity="center"
        android:tag="Bottom3"
        android:weightSum="10">

        <TextView
            android:id="@+id/text_book_list_async_paragraph"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Async Paragraph"
            android:layout_weight="0.5"   />

        <TextView
            android:id="@+id/text_book_list_async_phrase"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Async Phrase"
            android:layout_weight="0.5"  />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_selector"
        android:padding="10dp"
        android:weightSum="1">

        <com.android.snake.ObjectValueView
            android:id="@+id/object_book_home_item_book_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_book_home_item_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.3"  />

        <TextView
            android:id="@+id/text_book_home_paragraph"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Paragraph List"
            android:layout_weight="0.3" />

        <TextView
            android:id="@+id/text_book_home_phrase"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:text="Phrase List" />
    </LinearLayout>

</com.daimajia.swipe.SwipeLayout>